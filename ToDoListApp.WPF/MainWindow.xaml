<Window x:Class="ToDoListApp.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="To-Do List" Height="350" Width="525">
    <Grid>
        <ListBox Name="TaskList" HorizontalAlignment="Left" Height="200" VerticalAlignment="Top" Width="500" Margin="10,10,0,0"/>
        <Button Content="Add Task" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="75" Margin="10,0,0,10" Click="AddTask_Click"/>
        <Button Content="Mark As Completed" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="125" Margin="90,0,0,10" Click="MarkAsCompleted_Click"/>
        <Button Content="Remove Task" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Margin="225,0,0,10" Click="RemoveTask_Click"/>
    </Grid>
</Window>
