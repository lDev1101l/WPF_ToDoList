<Window x:Class="ToDoListApp.WPF.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Task" Height="200" Width="300" Background="#D8FFFFFF">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="27*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Title:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,10,0,0" Width="65"/>
        <TextBox Name="TitleTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="156" Margin="80,10,0,0"/>
        <Label Content="Description:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,40,0,0" Width="75"/>
        <TextBox Name="DescriptionTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="156" Height="80" Margin="80,40,0,0" TextWrapping="Wrap"/>
        <Button Content="Add" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="75" Margin="70,0,0,10" Click="AddButton_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Margin="0,0,0,10" Click="CancelButton_Click"/>
    </Grid>
</Window>
